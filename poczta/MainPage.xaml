             x:Class="poczta.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Entry Text="pl" Placeholder="kraj" x:Name="kraj"/>
            <Entry Text="22-400" Placeholder="kod pocztowy" x:Name="kodp"/>

            <Button
                Text="Pokaż" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Label x:Name="wynik" Text=""/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
